generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  password      String?
  emailVerified DateTime?
  image         String?
  role          UserRole     @default(USER)
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  accounts     Account[]
  sessions     Session[]
  welcomebooks Welcomebook[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// Welcomebook application models
model Welcomebook {
  id                      String    @id @default(cuid())
  propertyName            String
  slug                    String    @unique
  userId                  String
  sensitiveDataExpiresAt  DateTime? // Sensitive sections (WiFi, Access) expire after this time
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  sections Section[]
  visits   Visit[]

  @@index([userId])
  @@map("welcomebooks")
}

model Section {
  id            String      @id @default(cuid())
  welcomebookId String
  type          SectionType
  customTitle   String?
  data          Json        @default("{}")
  dataEn        Json        @default("{}")  
  order         Int         @default(0)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  welcomebook Welcomebook @relation(fields: [welcomebookId], references: [id], onDelete: Cascade)
  media       Media[]

  @@index([welcomebookId])
  @@map("sections")
}

model Media {
  id        String    @id @default(cuid())
  sectionId String
  type      MediaType
  url       String
  filename  String?
  createdAt DateTime  @default(now())

  section Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@index([sectionId])
  @@map("media")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  USER
}

enum SectionType {
  WIFI
  ACCESS
  LOCATION
  HOST
  TRASH
  MAPS360
  WIDGET
  EMERGENCY
  APPLIANCES
  PLACES
  CUSTOM
  HTML_EMBED
  RICH_TEXT
}

enum MediaType {
  PHOTO
  VIDEO
}

// Visit tracking model
model Visit {
  id            String      @id @default(cuid())
  welcomebookId String
  ipAddress     String?
  userAgent     String?
  referer       String?
  country       String?
  city          String?
  createdAt     DateTime    @default(now())

  welcomebook   Welcomebook @relation(fields: [welcomebookId], references: [id], onDelete: Cascade)

  @@index([welcomebookId])
  @@index([createdAt])
  @@map("visits")
}
